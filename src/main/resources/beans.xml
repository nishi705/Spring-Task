<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">    <!-- bean definitions here -->
    <bean id="movie" autowire="byName" class="com.stackroute.domain.Movie">
        <property name="actor" ref="actor"></property>
    </bean>


    <bean id="actor" class="com.stackroute.domain.Actor">
        <property name="age" value="22"></property>
        <property name="gender" value="Female"></property>
        <property name="name" value="nishi"></property>
    </bean>
    <!--bean for constructor-injection-->

    <bean id="movie1" autowire="constructor" class="com.stackroute.domain.Movie">
        <constructor-arg ref="actor1"/>
    </bean>

    <bean id="actor1" class="com.stackroute.domain.Actor">
        <constructor-arg value="22"></constructor-arg>
        <constructor-arg value="Female"></constructor-arg>
        <constructor-arg value="nishi"></constructor-arg>
    </bean>

    <!--    <bean id="BeanLifecycle" class="com.stackroute.demo.BeanLifecycleDemoBean" init-method="customInit" destroy-method="customDestroy">-->

    <!--    </bean>-->
    <!--    <bean id="BeanPostProcessor" class=""-->

</beans>
